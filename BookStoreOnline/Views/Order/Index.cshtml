@model IEnumerable<BookStoreOnline.Models.DONHANG> 
<div class="container body-page mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Danh sách đơn hàng</h4>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Tên khách hàng</th>
                        <th>Ngày đặt</th>
                        <th>Địa chỉ giao hàng</th>
                        <th>Giá trị đơn hàng</th>
                        <th>Trạng thái</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.KHACHHANG.Ten)
                            </td>
                            <td>
                                @String.Format("{0:dd/MM/yyyy}", item.NgayDat)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DiaChi)
                            </td>
                            <td>
                                @{
                                    var culture = new System.Globalization.CultureInfo("vi-VN");
                                    var formattedValue = item.TongTien.ToString("C0", culture);
                                }
                                @formattedValue
                            </td>
                            @if (item.TrangThai == "Received")
                            {
                                <td class="text-success">Đã nhận</td>
                            }
                            else
                            {
                                <td class="text-danger">Đang xử lý</td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Thêm một số CSS tùy chỉnh để làm đẹp giao diện -->
<style>
    .container.body-page {
        margin-top: 20px;
    }

    .card-header {
        background-color: #007bff;
        color: white;
        font-size: 1.5rem;
        font-weight: bold;
    }

    .card-body {
        padding: 20px;
    }

    .table {
        margin-bottom: 0;
    }

    .table-hover tbody tr:hover {
        background-color: #f5f5f5;
    }

    .thead-dark th {
        background-color: #343a40;
        color: white;
    }

    .text-danger {
        color: red !important;
    }

    .text-success {
        color: green !important;
    }
</style>
