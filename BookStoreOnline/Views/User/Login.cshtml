@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container body-page my-5">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card">
                <div class="row no-gutters">
                    <div class="col-lg-6">
                        <img src="https://wallpapercave.com/wp/wp5960139.jpg" alt="Login Image" class="img-fluid" style="height: 100%; object-fit: cover;">
                    </div>
                    <div class="col-lg-6 d-flex flex-column justify-content-center p-4">
                        <h3 class="text-muted mb-4">Đăng nhập</h3>
                        @using (Html.BeginForm("Login", "User"))
                        {
                            <div class="form-group">
                                <label for="exampleInputEmail1">Email</label>
                                <input type="email" name="Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Nhập địa chỉ email của bạn">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Mật khẩu</label>
                                <input type="password" name="MatKhau" class="form-control" id="exampleInputPassword1" placeholder="Mật khẩu đăng nhập">
                                <span class="text-danger">@ViewBag.ThongBao</span>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Đăng nhập</button>
                        }
                        <div class="mt-3">
                            <span>Bạn chưa có tài khoản? @Html.ActionLink("Đăng ký ngay", "SignUp", "User")</span>
                            <a href="#" class="float-right">Quên mật khẩu</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
