@model IEnumerable<BookStoreOnline.Models.KHACHHANG>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card-body">
    <h2>Danh sách tài khoản người dùng</h2>
</div>
<p>
    @*<button class="btn-default"> @Html.ActionLink("Thêm mới", "Create") </button>*@
</p>
<table class="table table-bordered">
    <tr>
        <th>
            Tên người dùng
        </th>
        <th>
            Email
        </th>
        <th>
            Địa chỉ
        </th>

        <th> Số điện thoại</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoDienThoai)
            </td>
           

            <td>
                @*<button class="btn btn-success">
            @Html.ActionLink("Sửa", "Edit", new { id = item.MaNguoiDung }, new { @style = "color:white;" })
        </button>*@

                <div class="col">

                    <a href="@Url.Action("ResetPassword", new { id = item.MaKH })" class="btn btn-sm btn-warning">Reset mật khẩu</a>

                    @if (item.TrangThai == true)
                    {
                        <a href="@Url.Action("DisableAccount", new { id = item.MaKH })" class="btn btn-sm btn-success">Vô hiệu hóa</a>
                    }
                    else
                    {
                        <a href="@Url.Action("EnableAccount", new { id = item.MaKH })" class="btn btn-sm btn-danger">Kích hoạt</a>
                    }
                </div>
                @*<button class="btn btn-danger">
            @Html.ActionLink("Xóa", "Delete", new { id = item.MaKH }, new { @style = "color:white;" })
        </button>*@
            </td>
        </tr>
    }


</table>

