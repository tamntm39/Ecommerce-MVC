@model BookStoreOnline.Models.SANPHAM

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card-body">
    <h2>Thêm sách mới</h2>
</div>
@using (Html.BeginForm(("Create", "Products", FormMethod.Post, new { @enctype = "multipart/form-data" })))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="mb-3">
            <label for="CategoryName" class="form-label"> Tên sách</label>
            @Html.EditorFor(model => model.TenSanPham, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenSanPham, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            <label for="CategoryName" class="form-label">  Tác giả</label>
            @Html.EditorFor(model => model.TacGia, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TacGia, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="mb-3">
        <label for="CategoryName" class="form-label">  Giá </label>
        @Html.EditorFor(model => model.Gia, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Gia, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        <label for="CategoryName" class="form-label">  Thể loại </label>
        @Html.DropDownList("LoaiSP", null, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.MaLoai, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        <label for="CategoryName" class="form-label">  Giới thiệu</label>
        <textarea name="Introduce" placeholder="Giới thiệu về sách" class="form-control" rows="4"></textarea>
        @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        <label for="CategoryName" class="form-label">  Hình ảnh</label>
        <div class="mb-3">
            <input type="file" name="imageBook" />
            @Html.ValidationMessageFor(model => model.Anh, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center">
        @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary", style = "color: white !important;" })
        <button type="submit" class="btn btn-primary" style="color: white !important;">Thêm</button>
    </div>

}

