@model IEnumerable<BookStoreOnline.Models.SANPHAM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="card-body">
    <h2>Danh sách Sách</h2>
</div>
<div class="text-right">
    <button type="button" class="btn btn-primary" onclick="location.href='/Admin/Products/Create';">Thêm sách mới</button>
</div>
   
    <table class="table">
        <tr>
            <th >
                Sách
            </th>


            <th>
                Tác giả
            </th>

            <th>
                Thể loại
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td width="40%">
                    <img src="~/Images/@item.Anh" style="width: 30%; position: relative; left: 0;height:150px" />

                    @Html.DisplayFor(modelItem => item.TenSanPham)
                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.TacGia)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.LOAI.Tenloai)
                </td>
                <td>
                    @*@Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.ProductID }) |

        @Html.ActionLink("Xóa", "Delete", new { id = item.ProductID })*@
                    <div style="display: flex; justify-content: flex-end;">
                    <a href="@Url.Action("Edit", new { id = item.MaSanPham })" class="btn btn-sm btn-warning">Chỉnh sửa</a> 
                    <a href="@Url.Action("Delete", new { id = item.MaSanPham })" class="btn btn-sm btn-danger">Xóa</a>
                    </div>
                </td>
            </tr>
        }

    </table>
