@model BookStoreOnline.Areas.Admin.Models.LoginViewModel


@Html.AntiForgeryToken()

@* View Title *@
@{
    ViewBag.Title = "Đăng nhập quản trị hệ thống";
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <link href="~/Content/AdminAssets/login-assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/AdminAssets/login-assets/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/AdminAssets/login-assets/css/style.css" rel="stylesheet">

    <title>Đăng nhập quản trị hệ thống</title>
</head>
<body>
    <section class="form-01-main">
        <div class="form-cover">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        @using (Html.BeginForm("Login", "Auth", FormMethod.Post, new { id = "loginForm" }))
                        {
                            <div class="form-sub-main">
                                <div class="_main_head_as">
                                    <a href="#">
                                        <img src="~/Content/AdminAssets/login-assets/images/vector.png">
                                    </a>
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control _ge_de_ol", @placeholder = "Enter Email", @required = "required", @aria_required = "true" })
                                </div>

                                <div class="form-group">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "********", @required = "required" })
                                    <i toggle="#password" class="fa fa-fw fa-eye toggle-password field-icon"></i>
                                </div>
                                <div class="form-group">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                </div> 

                                <div class="form-group">
                                    <div class="btn_uy">
                                        <a href="#" id="loginLink"><span>Login</span></a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#loginLink').click(function (event) {
                event.preventDefault();
                $('#loginForm').submit();
            });
        });
    </script>
</body>
</html>
